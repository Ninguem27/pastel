<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textSize="30dp"
        android:id="@+id/titprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastel!"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
 />

    <TextView
        android:textSize="30dp"
        android:id="@+id/titpreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 15,90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


    <ImageView

        android:id="@+id/imgpastel"
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/titpreco"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="30dp"
        android:src="@drawable/pastel"
     />

    <TextView
        android:textSize="30dp"
        android:id="@+id/titdescri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        app:layout_constraintTop_toBottomOf="@+id/imgpastel"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:textSize="30dp"
        android:id="@+id/textprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastel é um alimento composto por uma massa á base de farinha a que se dá a forma de um envelope, se recheia e depois se frita por imersão em óleo fervente."
        app:layout_constraintTop_toBottomOf="@+id/titdescri"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="15dp"
        />

    <TextView
        android:textSize="30dp"
        android:id="@+id/quant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade:"
        app:layout_constraintTop_toBottomOf="@+id/textprod"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="15dp"
        />

    <TextView
        android:textSize="30dp"
        android:id="@+id/traco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______"
        app:layout_constraintTop_toBottomOf="@+id/textprod"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>